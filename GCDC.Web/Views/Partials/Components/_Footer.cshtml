@using GCDC.Common.Helpers
@using GCDC.Common.Models.CMS;
@model GCDC.Common.Models.CMS.Footer;
@{
    var ViewName = ViewContext.ExecutingFilePath;
    var footer_logo_path = GCDC.Common.Helpers.Common.GetHeaderLogoPath(Model?.FooterLogo?.GetMediaUrl());

}


@if (Model != null)
{
    @using (new FunctionTracer(false, Model.Name))
    {
        try
        {
            <section @GCDC.Common.Helpers.Constants.cms_component_name="@Model.Name" @Constants.cms_page_view_name="@ViewName" class="sec-footer">
                <div class="container">
                    <div class="sec-padded">
                        <div class="footer--wrapper">
                            <div class="footer-linking">
                                <div class="footer-logo">
                                    <a href="@Model?.FooterLogoHref?.Url">
                                        <img src="@footer_logo_path" class="js-tosvg">
                                    </a>
                                </div>
                                <div class="footer-links--wrapper">
                                    <div class="linking-box">
                                        <ul>
                                            @if (Model?.FooterNavigations?.Children != null)
                                            {
                                                @foreach (NavigationItem item in Model.FooterNavigations.Children)
                                                {
                                                    if (item.Link != null && !string.IsNullOrEmpty(item.Link.Url))
                                                    {
                                                        <li data-animation-type="fade-up">
                                                            <a href="@item?.Link.Url" class="heading5">@item?.Link.Name</a>
                                                        </li>
                                                    }
                                                }
                                            }
                                        </ul>
                                        <div class="vertical-line-footer">
                                            <span>
                                                <img class="js-tosvg diamond-icon-vertical icon-1"
                                                     src="/assets/img/icon/diamondIcon.svg"
                                                     alt="" />
                                            </span>
                                            <span>
                                                <img class="js-tosvg diamond-icon-vertical icon-2"
                                                     src="/assets/img/icon/diamondIcon.svg"
                                                     alt="" />
                                            </span>
                                        </div>
                                    </div>
                                    <div class="connect-box" data-animation-type="fade-up">
                                        <h3 data-animation-type="fade-up" class="heading3 sec-heading">@Model?.FooterSocialLabel</h3>
                                        <div class="social-links" data-animation-type="fade-up">
                                            @if (Model.SocialIconPicker != null && Model.SocialIconPicker.Any())
                                            {
                                                foreach (SocialIconItem item in Model.SocialIconPicker)
                                                {
                                                    if (item.Link != null && !string.IsNullOrEmpty(item.Link.Url))
                                                    {
                                                        <a href="@item?.Link.Url" target="_blank" class="social-logo">
                                                            <img src="@item?.Icon?.GetMediaUrl()" class="js-tosvg">
                                                        </a>
                                                    }
                                                }
                                            }
                                        </div>
                                        @if (Model.FooterGetInTouch != null && !string.IsNullOrEmpty(Model.FooterGetInTouch?.Url))
                                        {
                                            <div class="footer-btn" data-animation-type="fade-up">
                                                <a href="@Model?.FooterGetInTouch.Url" target="@Model?.FooterGetInTouch.Target" class="btn btn-secondary btn-dark">@Model?.FooterGetInTouch?.Name</a>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                            <div class="horizontal-line" data-animation-scroll="horizontalLine" data-initial-width="20">
                                <span>
                                    <img class="js-tosvg diamond-icon-horizontal icon-1"
                                         src="/assets/img/icon/diamondIcon.svg"
                                         alt="" />
                                </span>
                                <span>
                                    <img class="js-tosvg diamond-icon-horizontal icon-2"
                                         src="/assets/img/icon/diamondIcon.svg"
                                         alt="" />
                                </span>
                                <span>
                                    <img class="js-tosvg diamond-icon-horizontal icon-3"
                                         src="/assets/img/icon/diamondIcon.svg"
                                         alt="" />
                                </span>
                            </div>
                            <div class="footer-bottom">
                                <div class="brand-logo">
                                    @if (Model.BrandLogoHref != null && !string.IsNullOrEmpty(Model.BrandLogoHref.Url))
                                    {
                                        <a href="@Model?.BrandLogoHref.Url" target="_blank">
                                            <img src="@Model?.BrandLogo?.GetMediaUrl()" class="js-tosvg">
                                        </a>
                                    }
                                    else
                                    {
                                        <img src="@Model?.BrandLogo?.GetMediaUrl()" class="js-tosvg">

                                    }

                                </div>
                                <div class="copyright">
                                    <p class="body1">@Model?.CopyrightText</p>
                                </div>
                                <div class="terms">
                                    <ul>
                                        @if (Model?.FooterSecondaryNavigation?.Children != null)
                                        {
                                            foreach (NavigationItem item in Model.FooterSecondaryNavigation.Children)
                                            {
                                                if (item.Link != null && !string.IsNullOrEmpty(item.Link.Url))
                                                {
                                                    <li>
                                                        <a href="@item?.Link.Url" class="cta-txt">@item?.Link.Name</a>
                                                    </li>
                                                }
                                            }
                                        }
                                    </ul>
                                </div>
                            </div>
                            <div class="line--mbl">
                                <div class="vertical-line-footer">
                                    <span>
                                        <img class="js-tosvg diamond-icon-vertical icon-1"
                                             src="/assets/img/icon/diamondIcon.svg"
                                             alt="" />
                                    </span>
                                    <span>
                                        <img class="js-tosvg diamond-icon-vertical icon-2"
                                             src="/assets/img/icon/diamondIcon.svg"
                                             alt="" />
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        }
        catch
        {
            throw;
        }
    }
}
